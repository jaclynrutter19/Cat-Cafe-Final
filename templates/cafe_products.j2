<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="static/style.css">
    <title>Cat Cafe</title>
</head>
<body>
    <header>
        <p class="company"><a href="/">Cat Cafe</a></p>
        <nav>
            <a href="cats">Cats</a>
            <a href="cafe_products">Cafe Products</a>
            <a href="employees">Employees</a>
            <a href="customers">Customers</a>
            <a href="foster_parents">Foster Parents</a>
            <a href="adoptions">Adoptions</a>
            <a href="cafe_transactions">Cafe Transactions</a>
            <a href="product_orders">Product Orders</a>
            <a href="foster_cat_relationships">Foster/Cat Relationships</a>
        </nav>
    </header>
    <main>
        <div class="content-stripe hero-stripe">
            <h1>Manage Cafe Products</h1>
        </div>
        <div class="content-stripe table-stripe">
            <table>
                 <thead>
                <tr>
                  <!-- Iterate through each key in the first entry to get the
                    column name -->
                    {% for key in cafe_products[0].keys() %}

                    <!-- Create a <th> tag with the key inside of it, this will be
                    our header row -->
                    <th>{{ key }}</th>

                    <!-- End of this for loop -->
                    {% endfor %}
                </tr>
                <tbody>
        
                <!-- Now, iterate through every cafe product in cafe products -->
                {% for cafe_product in cafe_products %}
                <tr>
                    <!-- Then iterate through every key in the current person dictionary -->
                    {% for key in cafe_product.keys() %}

                    <!-- Create a <td> element with the value of that key in it -->
                    <td>{{cafe_product[key]}}</td>
                    {% endfor %}

                    <!-- Create our edit/delete buttons -->
                    <td><a href="edit_cafe_product/{{cafe_product.product_id}}" class ="edit-del">Edit</a></td>
                    <td><a href="delete_cafe_product/{{cafe_product.product_id}}" class ="edit-del">Delete</a></td>
                </tr>
                {% endfor %}
              </table>
        </div>
        <div class="content-stripe add-stripe">
            <h2>Add Cafe Product</h2>
            <div class="form-region">
                <form id = "insertCafeProduct" action = "/cafe_products" method = "post">
                    <div class="group-one">
                    
                    <label for="name">Name:</label><br>
                    <input type="text" id="name" name="name" ><br>
                    
                    <label for="price">Price:</label><br>
                    <input type="text" id="price" name="price" pattern="^[0-9]*\.?[0-9]+$">
                    <label for="quantity">Quantity:</label><br>
                    <input type="text" id="quantity" name="quantity" pattern="^[0-9]*$">
                    <label for="product-type">Category:</label><br>
                     <select class = "form-control" id = "product-type"  name="product-type" required>
                        <option value="" selected disabled hidden>Choose here</option>
                        <option value="Food">Food</option>
                        <option value="Beverage">Beverage</option>
                        <option value="Merch">Merch</option>
                        <option value="Other">Other</option>
                    </select>
                    </div>
                    <div class="group-three">
                        <input class="btn btn-primary" type="submit" value="Submit" name="Add_Cafe_Product">
                    </div>
            </div>
        </div>
    </main>
    <footer>
        <p>&#169; 2023 Olivia Russell & Jaclyn Rutter</p>
    </footer>
</body>
</html>